function numberWithCommas(number, numDigits) {
  if (numDigits == undefined) {
    numDigits = 0;
  }
  var val = (Math.round(number * 100) / 100).toFixed(numDigits);
  var parts = val.toString().split(".");
  parts[0] = parts[0].replace(/\B(?=(\d{3})+(?!\d))/g, ",");
  return parts.join(".");
}

